<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/font/fontawesome-free-6.5.1-web/css/all.css" />
    <link rel="stylesheet" href="~/css/Customer/grid.css" />
    <link rel="stylesheet" href="~/css/Customer/base.css" />
    <link rel="stylesheet" href="~/css/Customer/main.css" />
    <link rel="stylesheet" href="~/css/Customer/reponsive.css" />
</head>
<body>
    <div class="app">
        <partial name="Customer/_HeaderCustomer" />

        <div class="app__container">
            <div class="grid wide">
                <div class="app__content">
                    @RenderBody()
                </div>
            </div>
        </div>

        <partial name="Customer/_FooterCustomer" />
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>