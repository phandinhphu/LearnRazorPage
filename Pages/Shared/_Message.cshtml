@{
    var title = ViewData["TitleContent"] ?? "Thông báo";
    var content = ViewData["Content"] ?? "Nội dung thông báo";
    var type = ViewData["Type"] ?? "danger";
}

<div class="mt-4 alert alert-@type">
    <h4 class="alert-heading">@title</h4>
    <p>@content</p>
</div>