@page "/admin/assign-member-role/{id}"
@model WebAppTest.Admin.Pages_Users.AddRoleModel
@{
    ViewData["Title"] = "Gán role cho thành viên";
    Layout = "_LayoutAdmin";
}

<h3>Gán role cho thành viên @Model.User.UserName</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3">
                <label asp-for="Roles" class="form-label"></label>
                @Html.ListBoxFor(m => m.Roles, Model.RoleList, new { @class = "form-control", @multiple = "multiple" })
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Cập nhật</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
