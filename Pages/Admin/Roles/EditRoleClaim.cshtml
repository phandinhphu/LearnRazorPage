@page "/admin/roles/edit-claim/{id}"
@model WebAppTest.Admin.Pages_Roles.EditRoleClaimModel
@{
    ViewData["Title"] = "Sửa Role Claims";
    Layout = "_LayoutAdmin";
}

<h1>Edit Claims for Role: @Model.Role.Name</h1>

<h4>Role Claims</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Input.ClaimType" class="control-label"></label>
                <input asp-for="Input.ClaimType" class="form-control" />
                <span asp-validation-for="Input.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Input.ClaimValue" class="control-label"></label>
                <input asp-for="Input.ClaimValue" class="form-control" />
                <span asp-validation-for="Input.ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save change" class="btn btn-primary" />
                <input type="submit" value="Delete" asp-page-handler="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Edit" asp-route-id="@Model.Role.Id">Back to Role</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}