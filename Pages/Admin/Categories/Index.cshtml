@page
@model WebAppTest.Admin.Pages_Categories.IndexModel

@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "_LayoutAdmin";
    int i = 0;
}

<div>
    <h1>Danh sách Category</h1>
</div>

<p>
    <a asp-page="Create" class="btn btn-primary">Thêm category</a>
</p>
<table class="table table-bordered mt-2">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Description)
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Category.Count == 0)
        {
            <tr>
                <td colspan="6" class="text-center">Không có danh mục nào. <a asp-page="Create">Thêm danh mục mới</a></td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.Category) {
                <tr>
                    <td>
                        @(++i)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
